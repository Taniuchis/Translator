= form_for @english_word do |f|
  - if @english_word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@english_word.errors.count, "error")} prohibited this english_word from being saved:"
      %ul
        - @english_word.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :kind
    = f.text_field :kind
  .actions
    = f.submit 'Save'
